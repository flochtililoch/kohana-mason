<comp>
	<attr>
		<key name="_locales" visibility="protected static" process="true">ORM::load('Locale')->findAll()</key>
	</attr>
	<process>
		<key name="default_locale">Kohana::$locale</key>
		<key name="id">is_array($this->request->args) ? array_shift($this->request->args) : NULL</key>
		<key name="name">is_array($this->request->args) ? array_shift($this->request->args) : NULL</key>
		<key name="multiple">is_array($this->request->args) ? array_shift($this->request->args) : NULL</key>
		<key name="locales">self::$_locales</key>
	</process>
</comp>